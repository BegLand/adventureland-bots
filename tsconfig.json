{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "build",
        "removeComments": true,
        "rootDir": "source",
        "sourceMap": false,
        "watch": false
    },
    "include": [
        "source/server.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}