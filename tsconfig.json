{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2020"
        ],
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "moduleResolution": "node",
        /** TODO: Ideally this should be true */
        "noImplicitAny": false,
        "outDir": "build",
        "removeComments": true,
        "rootDir": "source",
        "sourceMap": false,
        "watch": false
    },
    "include": [
        "source/*.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}